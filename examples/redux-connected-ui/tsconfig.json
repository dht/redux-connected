{
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react",
        "baseUrl": "../../",
        "paths": {
            "@rc-adapter-base": ["adapter-base/rc-adapter-base/src"],
            "@rc-adapter-base/*": ["adapter-base/rc-adapter-base/src"],
            "@rc-adapter-rest": ["adapters/rc-adapter-rest/src"],
            "@rc-adapter-rest/*": ["adapters/rc-adapter-rest/src"],
            "@rc-adapter-json-server": [
                "adapters-vendors/rc-adapter-json-server/src"
            ],
            "@rc-adapter-json-server/*": [
                "adapters-vendors/rc-adapter-json-server/src"
            ],
            "@redux-synced": ["packages/redux-synced/src"],
            "@redux-synced/*": ["packages/redux-synced/src"],
            "@redux-connected": ["packages/redux-connected-core/src"],
            "@redux-connected/*": ["packages/redux-connected-core/src"],
            "@redux-connected-ui-store": [
                "examples/redux-connected-ui-store/src"
            ],
            "@redux-connected-ui-store/*": [
                "examples/redux-connected-ui-store/src"
            ],
            "@redux-connected-components": [
                "packages/redux-connected-components/src"
            ],
            "@redux-connected-components/*": [
                "packages/redux-connected-components/src"
            ]
        }
    },
    "include": ["./src"]
}
