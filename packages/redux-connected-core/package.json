{
    "name": "redux-connected",
    "version": "0.0.187",
    "description": "auto-connect a redux store to a REST server",
    "license": "MIT",
    "main": "lib/index.js",
    "module": "esm/index.js",
    "files": [
        "lib/",
        "esm/"
    ],
    "types": "lib/index.d.ts",
    "typings": "lib/index.d.ts",
    "scripts": {
        "test": "jest --config jest.config.ts",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "lint": "eslint {src,tests,stories}/**/*.{ts,tsx}",
        "lint:fix": "yarn lint --fix",
        "lint:types": "tsc --noEmit",
        "build:cjs": "tsc",
        "build:es": "tsc -m esNext --outDir esm",
        "build": "yarn clean && yarn build:cjs && yarn build:es",
        "clean": "rm -rf lib/* && rm -rf esm/*",
        "watch": "nodemon -x \"npm run build\"",
        "generateData": "ts-node src/__helpers__/generateData"
    },
    "publishConfig": {
        "registry": "https://registry.npmjs.org/"
    },
    "author": "",
    "dependencies": {
        "axios": "^0.21.1",
        "date-fns": "^2.21.1",
        "firebase": "^8.4.1",
        "mongodb": "^3.6.6",
        "react-use": "^17.2.0",
        "redux-connected-types": "^0.0.114",
        "redux-devtools-extension": "^2.13.8",
        "redux-saga": "^1.1.3",
        "redux-store-generator": "^0.9.72",
        "redux-synced": "^0.0.116",
        "reselect": "^4.1.5",
        "store-builder-redux": "^0.0.70"
    },
    "devDependencies": {
        "@jest/types": "^26.6.2",
        "@testing-library/react-hooks": "^5.1.0",
        "@types/redux": "^3.6.0",
        "@types/redux-saga": "^0.10.5",
        "chance": "^1.1.7",
        "eslint": "^7.26.0",
        "firebase-admin": "^9.6.0",
        "husky": "^5.2.0",
        "lint-staged": "^10.5.4",
        "react": "17.0.2",
        "redux": "^4.0.5",
        "redux-saga-test-plan": "^4.0.1",
        "redux-saga-tester": "^1.0.874",
        "source-map-explorer": "^2.5.2",
        "tslib": "^2.1.0",
        "typescript": "4.3.5"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "pre-push": "yarn lint && yarn clean && yarn build && yarn test"
        }
    },
    "lint-staged": {
        "src/**/**/*.{ts,tsx}": [
            "eslint --fix",
            "git add"
        ]
    }
}
