{
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react",
        "baseUrl": "./",
        "paths": {
            "@rc-adapter-base": ["../../base/rc-adapter-base"],
            "@rc-adapter-base/*": ["../../base/rc-adapter-base"],
            "@rc-adapter-rest": ["../../adapters/rc-adapter-rest/src"],
            "@rc-adapter-rest/*": ["../../adapters/rc-adapter-rest/src"],
            "@redux-connected": ["../redux-connected"],
            "@redux-connected/*": ["../redux-connected"]
        }
    },
    "include": ["./src"]
}
