{
    "restartable": "rs",
    "ignore": [
        ".git",
        "node_modules",
        "**/node_modules",
        "src/index.ts",
        "src/index.scss"
    ],
    "verbose": true,
    "events2": {
        "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
    },
    "watch": ["src"],
    "env": {
        "NODE_ENV": "development"
    },
    "ext": "ts"
}
