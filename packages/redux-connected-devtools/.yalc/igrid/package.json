{
    "name": "igrid",
    "version": "0.0.5",
    "license": "MIT",
    "description": "Igrid core",
    "main": "lib/index.js",
    "files": [
        "lib/",
        "lib/index.css",
        "esm/"
    ],
    "types": "lib/index.d.ts",
    "typings": "lib/index.d.ts",
    "scripts": {
        "test": "jest --config jest.config.ts",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "lint": "eslint {src,tests,stories}/**/*.{ts,tsx}",
        "lint:fix": "yarn lint --fix",
        "lint:types": "tsc --noEmit",
        "build:cjs": "tsc",
        "build:es": "tsc -m esNext --outDir esm",
        "build": "node scripts/generate-index.js && npm run clean && npm run scss && yarn build:cjs && yarn build:es && yalc push",
        "clean": "rm -rf lib2/* && rm -rf esm2/*",
        "watch": "nodemon -x \"npm run build\"",
        "scss": "node scripts/build-scss.js"
    },
    "dependencies": {
        "@fluentui/react": "^8.1.5",
        "@testing-library/react": "^11.2.5",
        "@types/classnames": "^2.3.1",
        "classnames": "^2.3.1",
        "lodash": "^4.17.21",
        "react": "^17.0.2",
        "react-draggable": "^4.4.3",
        "react-json-view": "^1.21.1",
        "react-redux": "^7.2.4",
        "react-use": "^17.2.4",
        "react-window": "^1.8.6",
        "redux-connected": "^0.0.5",
        "sass": "^1.32.8",
        "uuid": "^8.3.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "pre-push": "yarn lint && yarn clean && yarn build && yarn test"
        }
    },
    "lint-staged": {
        "src/**/**/*.{ts,tsx}": [
            "eslint --fix",
            "git add"
        ]
    },
    "yalcSig": "1adadbbb682b60caa3fd3748d31b2ac4"
}
