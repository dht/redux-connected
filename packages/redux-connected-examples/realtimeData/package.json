{
    "name": "redux-connected-firebase",
    "version": "0.0.1",
    "description": "auto-connected a redux store to a REST/sockets server",
    "license": "UNLICENSED",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "scripts": {
        "start": "npm link",
        "clean": "rm -rf lib/* && rm -rf esm/*",
        "test": "jest",
        "build": "npm run clean && tsc",
        "watch": "nodemon -x \"npm run build\"",
        "analyze": "source-map-explorer 'lib/*.js'  --no-border-checks"
    },
    "publishConfig": {
        "registry": "https://registry.npmjs.org/"
    },
    "author": "",
    "dependencies": {
        "@types/redux": "^3.6.0",
        "axios": "^0.21.1",
        "firebase-admin": "^9.5.0",
        "react-use": "^17.1.1",
        "redux": "^4.0.5",
        "redux-devtools-extension": "^2.13.8",
        "redux-saga": "^1.1.3"
    },
    "devDependencies": {
        "@types/redux-saga-tester": "^1.0.2",
        "chance": "^1.1.7",
        "husky": "^5.2.0",
        "jest": "^26.6.3",
        "lint-staged": "^10.5.4",
        "redux-saga-test-plan": "^4.0.1",
        "redux-saga-tester": "^1.0.874",
        "source-map-explorer": "^2.5.2",
        "ts-jest": "^26.5.0",
        "typescript": "^4.2.3"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "pre-push": "yarn lint && yarn clean && yarn build && yarn test"
        }
    },
    "lint-staged": {
        "src/**/**/*.{ts,tsx}": [
            "eslint --fix",
            "git add"
        ]
    }
}
