{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "baseUrl": "../..",
        "paths": {
            "@payem/root-types": ["packages/root-types"],
            "@payem/ui": ["packages/web-ui"]
        }
    },
    "include": ["src/**/*.tsx", "src/**/*.ts", "**/*.json", ],
    "exclude": ["node_modules"]
}
