{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "jsx": "react",
        "baseUrl": "./",
        "declaration": true,
        "pretty": true,
        "rootDir": "src",
        "sourceMap": false,
        "strict": true,
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noImplicitAny": false,
        "noFallthroughCasesInSwitch": true,
        "outDir": "lib",
        "allowJs": true,
        "lib": ["es2018", "dom"],
        "importHelpers": true,
        "paths": {
            "rc-adapter-base": ["../../base/rc-adapter-base"],
            "rc-adapter-base/*": ["../../base/rc-adapter-base"],
            "redux-connected": ["../redux-connected"],
            "redux-connected/*": ["../redux-connected"]
        }
    },

    "include": ["src", "test"],
    "exclude": [
        "node_modules",
        "types/types.play.ts",
        "**/*.spec.ts",
        "lib",
        "esm",
        "jest.config.ts"
    ]
}
